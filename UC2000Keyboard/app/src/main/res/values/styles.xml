<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.DeviceDefault">
        <!-- Customize your theme here. -->
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="buttonKeyboardStyle" parent="@android:style/Widget.Holo.Light.Button">
        <item name="android:textSize">14dip</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/button_selector</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_marginLeft">0dp</item>
    </style>

    <style name="toggleButtonKeyboardStyle" parent="@android:style/Widget.Holo.Light.Button">
        <item name="android:textSize">14dip</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/togglebutton_selector</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_marginLeft">0dp</item>
    </style>

    <style name="labelKeyboardStyle" parent="@android:style/Widget.DeviceDefault.TextView">
        <item name="android:textSize">14dip</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">0dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="labelBottomKeyboardStyle" parent="@android:style/Widget.DeviceDefault.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_marginTop">-2dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="shiftLabelKeyboardStyle" parent="labelKeyboardStyle">
        <item name="android:textColor">#FFEF93</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">bottom</item>
    </style>
</resources>
